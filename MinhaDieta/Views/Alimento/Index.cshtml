@model IEnumerable<MinhaDieta.Models.Entidades.Alimento>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Lista de alimentos</h3>

<p>
    @Html.ActionLink("Cadastrar novo alimento", "Criar")
</p>


<table>
    <tr>
        <th></th>
        <th>Nome</th>
        <th>Quantidade unitária</th>
        <th>Valor calórico</th>
    </tr>

    @if (Model.Count() != 0)
    {
        foreach (var item in Model) {
            <tr>
                <td>
                    @Html.ActionLink("Editar", "Editar", new {  Id = item.Id  }) |            
                    @Html.ActionLink("Excluir", "Excluir", new { Id = item.Id })
                </td>
                <td>
                    @item.Nome
                </td>
                <td>
                    @item.Quantidade
                </td>
                <td>
                    @item.ValorCalorico
                </td>
            </tr>
        }        
    }
    else
    {
        <tr>
            <td colspan="3">
                Sem materiais cadastrados.
            </td>
        </tr>
    }
    

</table>
